<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- SIN BARRA-->
    <style name="Theme.First" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/fucsia</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- SIN TEMA, SE QUEDA POR DEFECTO-->
    <style name="NoActionTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- modifico este tema -->
    </style>

    <!-- TEMA PARA EL MAIN Y EL REGISRO-->
    <style name="ActionTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/fucsia</item>
        <item name="actionBarStyle">@style/myActionBar</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- estilo creao para el action bar-->
    <style name="myActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/transparente</item>
    </style>

    <style name="Theme.First.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.First.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.First.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>